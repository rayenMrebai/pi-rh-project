<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.SalaireManagementController"
            prefHeight="800.0" prefWidth="1400.0"
            style="-fx-background-color: linear-gradient(to right, #0066CC 0%, #00AA66 100%);">



    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="20"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 20;">

        <!-- Logo -->
        <ImageView fx:id="logoImage" fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/logo.png"/>
            </image>
        </ImageView>

        <!-- Texte principal -->
        <VBox>
            <Label text="INTEGRA - Manage Salaries"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Administrator / RH Module"
                   style="-fx-font-size: 12px; -fx-text-fill: white;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Infos utilisateur -->
        <VBox alignment="CENTER_RIGHT">
            <Label text="Admin User" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="ADMIN" style="-fx-font-size: 11px; -fx-text-fill: white;"/>
        </VBox>
    </HBox>

    <!-- MAIN CONTENT -->
    <HBox spacing="20" AnchorPane.topAnchor="90" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- LEFT PANEL -->
        <VBox spacing="15" HBox.hgrow="ALWAYS"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox>
                    <Label text="Employee Salaries"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                    <Label text="Manage employee compensation"
                           style="-fx-font-size: 12px; -fx-text-fill: #718096;"/>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search employee"
                           prefWidth="400" prefHeight="40"
                           style="-fx-background-color: #f7fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 0 15;"/>
                <Button fx:id="btnAddSalary" text="+ Add Salary"
                        prefHeight="40" prefWidth="180"
                        style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        onAction="#handleAddSalary"/>
            </HBox>

            <Separator/>

            <HBox spacing="10" style="-fx-padding: 0 10;">
                <Label text="ID" prefWidth="60" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                <Label text="Employee" prefWidth="150" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                <Label text="Base" prefWidth="90" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                <Label text="Bonus" prefWidth="80" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                <Label text="Total" prefWidth="100" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                <Label text="Status" prefWidth="100" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
            </HBox>

            <ListView fx:id="salaryListView" prefHeight="580"
                      style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
        </VBox>

        <!-- RIGHT PANEL -->
        <VBox fx:id="detailsContainer" spacing="20" prefWidth="740" visible="false" managed="false"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">

            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox HBox.hgrow="ALWAYS">
                    <Label text="Salary Details"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                    <Label text="Complete salary breakdown"
                           style="-fx-font-size: 12px; -fx-text-fill: #718096;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- â­ AJOUTER CE BOUTON ICI -->
                <Button fx:id="btnGeneratePDF" text="ðŸ“„ GÃ©nÃ©rer PDF"
                        prefWidth="140" prefHeight="38"
                        style="-fx-background-color: #9f7aea; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        onAction="#handleGeneratePDF"/>
                <Button fx:id="btnUpdateSalary" text="Update"
                        prefWidth="110" prefHeight="38"
                        style="-fx-background-color: #4299e1; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        onAction="#handleUpdateSalary"/>
                <Button fx:id="btnDeleteSalary" text="Delete"
                        prefWidth="110" prefHeight="38"
                        style="-fx-background-color: #f56565; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-background-radius: 8;"
                        onAction="#handleDeleteSalary"/>
            </HBox>

            <VBox spacing="12" style="-fx-background-color: #e0e7ff; -fx-padding: 20; -fx-background-radius: 10;">
                <Label fx:id="lblEmployeeName" text="-"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1a202c;"/>

                <HBox spacing="30">
                    <VBox spacing="5">
                        <Label text="Base Salary" style="-fx-font-size: 11px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
                        <Label fx:id="lblBaseAmount" text="-"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Bonus Applied" style="-fx-font-size: 11px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
                        <Label fx:id="lblBonusAmount" text="-"
                               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #48bb78;"/>
                    </VBox>
                </HBox>

                <Separator/>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="Total Salary" style="-fx-font-size: 14px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
                    <Label fx:id="lblTotalAmount" text="-"
                           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                </HBox>
            </VBox>

            <GridPane hgap="40" vgap="15" style="-fx-background-color: #f7fafc; -fx-padding: 20; -fx-background-radius: 10;">
                <columnConstraints>
                    <ColumnConstraints minWidth="150"/>
                    <ColumnConstraints minWidth="200"/>
                </columnConstraints>

                <Label text="Payment Date" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-size: 13px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
                <Label fx:id="lblDatePaiement" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px; -fx-text-fill: #2d3748;"/>

                <Label text="Salary Status" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-size: 13px; -fx-text-fill: #718096; -fx-font-weight: bold;"/>
                <Label fx:id="lblStatus" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            </GridPane>

            <Separator/>

            <VBox spacing="12">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Bonus Rules"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                        <Label text="Manage bonus calculation rules"
                               style="-fx-font-size: 11px; -fx-text-fill: #718096;"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="btnAddRule" text="+ Add Bonus Rule"
                            prefWidth="160" prefHeight="35"
                            style="-fx-background-color: #48bb78; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 8;"
                            onAction="#handleAddRule"/>
                </HBox>

                <HBox spacing="10" style="-fx-padding: 0 10;">
                    <Label text="Rule ID" prefWidth="60" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                    <Label text="Rule Name" prefWidth="150" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                    <Label text="Percentage" prefWidth="90" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                    <Label text="Conditions" prefWidth="200" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                    <Label text="Actions" prefWidth="100" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #718096;"/>
                </HBox>

                <ListView fx:id="bonusRulesListView" prefHeight="200"
                          style="-fx-background-color: #fafafa; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8;"/>
            </VBox>
        </VBox>
    </HBox>

</AnchorPane>