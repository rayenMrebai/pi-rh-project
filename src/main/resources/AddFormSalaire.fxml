<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.AddFormSalaireController"
            prefHeight="450.0" prefWidth="500.0"
            style="-fx-background-color: #ecf0f1;">

    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label text="Ajouter un Nouveau Salaire"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>

        <Separator prefWidth="400"/>

        <GridPane hgap="15" vgap="20">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="250" prefWidth="250"/>
            </columnConstraints>

            <Label text="Utilisateur *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="cmbUser" promptText="Selectionner un utilisateur"
                      prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Salaire de Base *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtBaseAmount" promptText="Ex: 3000.00"
                       prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px;"/>

            <Label text="Date de Paiement *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <DatePicker fx:id="datePickerPaiement" promptText="Choisir une date"
                        prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="2"
                        style="-fx-font-size: 14px;"/>
        </GridPane>

        <Label text="Les champs bonus, total et statut sont calcules automatiquement."
               style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"
               wrapText="true" maxWidth="400"/>

        <Separator prefWidth="400"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnSave" text="Enregistrer"
                    prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleSave"/>
            <Button fx:id="btnCancel" text="Annuler"
                    prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleCancel"/>
        </HBox>
    </VBox>

</AnchorPane>