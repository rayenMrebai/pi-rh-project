<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.AddFormBonusRuleController"
            prefHeight="550.0" prefWidth="550.0"
            style="-fx-background-color: #ecf0f1;">

    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label text="Ajouter une Regle de Bonus"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #9f7aea;"/>

        <Separator prefWidth="450"/>

        <!-- Info Salaire (non modifiable) -->
        <VBox spacing="10" style="-fx-background-color: #e0e7ff; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Salaire associe" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="15">
                <VBox spacing="5">
                    <Label text="Employe:" style="-fx-font-size: 11px; -fx-text-fill: #718096;"/>
                    <Label fx:id="lblEmployeeName" text="-" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Salaire de base:" style="-fx-font-size: 11px; -fx-text-fill: #718096;"/>
                    <Label fx:id="lblBaseAmount" text="-" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
                </VBox>
            </HBox>
        </VBox>

        <Separator prefWidth="450"/>

        <!-- Formulaire -->
        <GridPane hgap="15" vgap="20">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="300" prefWidth="300"/>
            </columnConstraints>

            <!-- Nom de la rÃ¨gle -->
            <Label text="Nom de la regle *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtNomRegle" promptText="Ex: Bonus Performance"
                       prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px;"/>

            <!-- Percentage -->
            <Label text="Pourcentage *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtPercentage" promptText="Ex: 10"
                       prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px;"/>

            <!-- Condition -->
            <Label text="Condition *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextArea fx:id="txtCondition" promptText="Ex: Performance annuelle >= 4.0"
                      prefWidth="300" prefHeight="80" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"
                      style="-fx-font-size: 14px;"/>
        </GridPane>

        <!-- Note informative -->
        <Label text="Le bonus sera calcule automatiquement selon le pourcentage du salaire de base."
               style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"
               wrapText="true" maxWidth="450"/>

        <Separator prefWidth="450"/>

        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnSave" text="Enregistrer"
                    prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #9f7aea; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleSave"/>
            <Button fx:id="btnCancel" text="Annuler"
                    prefWidth="150" prefHeight="45"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleCancel"/>
        </HBox>
    </VBox>

</AnchorPane>