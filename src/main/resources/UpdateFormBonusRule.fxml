<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.UpdateFormBonusRuleController"
            prefHeight="600.0" prefWidth="550.0"
            style="-fx-background-color: #ecf0f1;">

    <VBox spacing="20" alignment="TOP_CENTER" AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

        <Label text="Modifier la Regle de Bonus"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4299e1;"/>

        <Separator prefWidth="450"/>

        <!-- Info Salaire (non modifiable) -->
        <VBox spacing="10" style="-fx-background-color: #bdc3c7; -fx-padding: 15; -fx-background-radius: 8;">
            <Label text="Informations (non modifiables)"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="250" prefWidth="250"/>
                </columnConstraints>

                <Label text="Employe:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-font-weight: bold;"/>
                <Label fx:id="lblEmployeeName" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Salaire de base:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-font-weight: bold;"/>
                <Label fx:id="lblBaseAmount" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-text-fill: #2980b9;"/>

                <Label text="Bonus calcule:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-font-weight: bold;"/>
                <Label fx:id="lblBonusAmount" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
            </GridPane>
        </VBox>

        <Separator prefWidth="450"/>

        <Label text="Champs Modifiables"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <!-- Formulaire -->
        <GridPane hgap="15" vgap="20">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints minWidth="300" prefWidth="300"/>
            </columnConstraints>

            <!-- Nom de la rÃ¨gle -->
            <Label text="Nom de la regle *" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtNomRegle"
                       prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-font-size: 14px;"/>

            <!-- Percentage -->
            <Label text="Pourcentage *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextField fx:id="txtPercentage"
                       prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-font-size: 14px;"/>

            <!-- Condition -->
            <Label text="Condition *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <TextArea fx:id="txtCondition"
                      prefWidth="300" prefHeight="80" wrapText="true"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"
                      style="-fx-font-size: 14px;"/>

            <!-- Statut -->
            <Label text="Statut *" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <ComboBox fx:id="cmbStatus" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>

        <Separator prefWidth="450"/>

        <!-- Boutons -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnUpdate" text="Mettre a Jour"
                    prefWidth="170" prefHeight="45"
                    style="-fx-background-color: #4299e1; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleUpdate"/>
            <Button fx:id="btnCancel" text="Annuler"
                    prefWidth="170" prefHeight="45"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;"
                    onAction="#handleCancel"/>
        </HBox>
    </VBox>

</AnchorPane>