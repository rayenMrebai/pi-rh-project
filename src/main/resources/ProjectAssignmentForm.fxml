<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ProjectAssignmentFormController"
      style="-fx-background-color: #f8fafc; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5);">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Header inspirÃ© du dashboard -->
    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-background-color: linear-gradient(to right, #0b1e33, #1e3a5f); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3); -fx-padding: 15 20;">
        <Label text="ðŸ“‹ Assign Employee to Project"
               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Segoe UI Semibold';"/>
    </HBox>

    <!-- Projects Table avec cadre Ã©lÃ©gant -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,50,100,0.1), 10, 0, 0, 5); -fx-padding: 15;">
        <Label text="ðŸ“Œ Select Project:" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;"/>
        <TableView fx:id="projectsTable" prefHeight="150"
                   style="-fx-background-color: transparent; -fx-border-color: #dbeafe; -fx-border-width: 1; -fx-border-radius: 10;">
            <columns>
                <TableColumn fx:id="projIdCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="projNameCol" text="Project Name" prefWidth="200"/>
                <TableColumn fx:id="projStatusCol" text="Status" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Assignment Fields -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,50,100,0.1), 10, 0, 0, 5); -fx-padding: 20;">
        <Label text="ðŸ“ Assignment Details" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1e3a5f; -fx-border-width: 0 0 1 0; -fx-border-color: #b0c4de; -fx-padding: 0 0 10 0;"/>

        <GridPane hgap="15" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Employee -->
            <Label text="ðŸ‘¤ Employee:*"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 13;"/>
            <ComboBox fx:id="employeeCombo"
                      GridPane.rowIndex="0" GridPane.columnIndex="1"
                      promptText="Select employee"
                      style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-background-color: white; -fx-padding: 5;"/>

            <!-- Role -->
            <Label text="ðŸ”§ Role:*"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 13;"/>
            <TextField fx:id="roleField"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                       promptText="e.g. Developer"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-background-color: white; -fx-padding: 8;"/>

            <!-- Allocation -->
            <Label text="âš–ï¸ Allocation %:*"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 13;"/>
            <Spinner fx:id="allocationSpinner"
                     GridPane.rowIndex="2" GridPane.columnIndex="1"
                     editable="true"
                     style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-background-color: white;"/>

            <!-- Start Date -->
            <Label text="ðŸ“… Assignment Start:*"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 13;"/>
            <DatePicker fx:id="startDatePicker"
                        GridPane.rowIndex="3" GridPane.columnIndex="1"
                        style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-background-color: white;"/>

            <!-- End Date -->
            <Label text="ðŸ“† Assignment End:*"
                   GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-text-fill: #2c3e50; -fx-font-weight: bold; -fx-font-size: 13;"/>
            <DatePicker fx:id="endDatePicker"
                        GridPane.rowIndex="4" GridPane.columnIndex="1"
                        style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d1d5db; -fx-background-color: white;"/>
        </GridPane>
    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Cancel" fx:id="cancelButton"
                style="-fx-background-color: #e2e8f0; -fx-text-fill: #1e293b; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 30; -fx-padding: 10 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"/>
        <Button text="Assign" fx:id="assignButton"
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-background-radius: 30; -fx-padding: 10 30; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
    </HBox>
</VBox>