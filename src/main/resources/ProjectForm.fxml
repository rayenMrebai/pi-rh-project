<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProjectFormController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Project Details" styleClass="section-title" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Project ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="details-label" />
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false" />

        <Label text="Project Name:*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="details-label" />
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="details-label" />
        <TextArea fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3" wrapText="true" />

        <Label text="Start Date:*" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="details-label" />
        <DatePicker fx:id="startDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="End Date:*" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="details-label" />
        <DatePicker fx:id="endDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Status:*" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="details-label" />
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="5" GridPane.columnIndex="1" promptText="Select status" />

        <Label text="Budget:*" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="details-label" />
        <TextField fx:id="budgetField" GridPane.rowIndex="6" GridPane.columnIndex="1" promptText="0.00" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" fx:id="cancelButton" styleClass="secondary" />
        <Button text="Save Project" fx:id="saveButton" />
    </HBox>
</VBox>


