<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.jobForm"
            prefWidth="520" prefHeight="420"
            style="-fx-background-color: #ffffff;">

    <top>
        <HBox style="-fx-background-color: #f3f6ff;">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>
            <Label text="Job Form" style="-fx-font-weight: bold; -fx-font-size: 16;">
                <font>
                    <Font size="16"/>
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Departement:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="tfDepartement" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Employee Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="tfEmployeeType" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Status:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbStatus" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Posted At:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpPostedAt" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Description:"/>
            <TextArea fx:id="taDescription" prefRowCount="4" wrapText="true"/>

        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="0" right="14" bottom="14" left="14"/>
            </padding>

            <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel"
                    style="-fx-background-color: #e5e7eb; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            <Button fx:id="btnSave" text="Save" onAction="#onSave"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
        </HBox>
    </bottom>

</BorderPane>
