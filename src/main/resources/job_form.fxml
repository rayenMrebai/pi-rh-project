<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.jobForm"
            prefWidth="560" prefHeight="640"
            style="-fx-background-color: #f5f7fb;">

    <!-- HEADER -->
    <top>
        <VBox spacing="6"
              style="-fx-background-color: linear-gradient(to right, #0B63CE, #0FA36B);">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <Label text="Job Position"
                   textFill="WHITE"
                   style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <Label text="Add / Edit a position"
                   textFill="WHITE"
                   style="-fx-opacity: 0.85; -fx-font-size: 12;"/>
        </VBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="16">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <VBox spacing="16"
                  style="-fx-background-color: white; -fx-background-radius: 16; -fx-border-radius: 16; -fx-border-color: #e6e9f0;">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <!-- SECTION: BASIC INFO -->
                <VBox spacing="10">
                    <Label text="Basic Information"
                           style="-fx-font-weight: bold; -fx-text-fill: #111827; -fx-font-size: 13;"/>

                    <GridPane hgap="12" vgap="12">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                            <Label text="Title" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <TextField fx:id="tfTitle"
                                       promptText="e.g. Java Developer"
                                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 10;"/>
                        </VBox>

                        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <Label text="Department" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <TextField fx:id="tfDepartement"
                                       promptText="e.g. IT"
                                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 10;"/>
                        </VBox>

                        <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="0">
                            <Label text="Employee Type" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <TextField fx:id="tfEmployeeType"
                                       promptText="e.g. Full-time"
                                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 10;"/>
                        </VBox>

                        <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <Label text="Status" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                            <ComboBox fx:id="cbStatus"
                                      prefHeight="40"
                                      style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 4 8 4 8;"/>
                        </VBox>
                    </GridPane>
                </VBox>

                <Separator style="-fx-opacity: 0.25;"/>

                <!-- SECTION: DETAILS -->
                <VBox spacing="10">
                    <Label text="Details"
                           style="-fx-font-weight: bold; -fx-text-fill: #111827; -fx-font-size: 13;"/>

                    <VBox spacing="6">
                        <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <TextArea fx:id="taDescription"
                                  promptText="Write a short description..."
                                  prefRowCount="5"
                                  wrapText="true"
                                  style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 10;"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Posted At" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                        <DatePicker fx:id="dpPostedAt"
                                    prefHeight="40"
                                    style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e5e7eb; -fx-padding: 4 8 4 8;"/>
                    </VBox>
                </VBox>

                <!-- BUTTONS -->
                <HBox spacing="12">
                    <Button fx:id="btnCancel"
                            text="Cancel"
                            onAction="#onCancel"
                            HBox.hgrow="ALWAYS"
                            maxWidth="Infinity"
                            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10;"/>

                    <Button fx:id="btnSave"
                            text="Save"
                            onAction="#onSave"
                            HBox.hgrow="ALWAYS"
                            maxWidth="Infinity"
                            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10;"/>
                </HBox>
            </VBox>

        </VBox>
    </center>

</BorderPane>
