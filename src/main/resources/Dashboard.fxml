                </HBox>
                <TableView fx:id="projectsTable" VBox.vgrow="ALWAYS" prefHeight="200" minHeight="200"
                           style="-fx-background-color: transparent; -fx-border-color: #dbeafe; -fx-border-width: 1; -fx-border-radius: 15;">
                    <columns>
                        <TableColumn text="Project ID" fx:id="projectIdCol" prefWidth="100"/>
                        <TableColumn text="Project Name" fx:id="projectNameCol" prefWidth="250"/>
                        <TableColumn text="Start Date" fx:id="projectStartCol" prefWidth="120"/>
                        <TableColumn text="End Date" fx:id="projectEndCol" prefWidth="120"/>
                        <TableColumn text="Status" fx:id="projectStatusCol" prefWidth="140"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- ASSIGNMENTS TABLE â€“ GREEN THEME -->
