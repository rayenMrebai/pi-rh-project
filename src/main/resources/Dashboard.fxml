                           style="-fx-text-fill: #6b7280; -fx-font-size: 12; -fx-padding: 3 0 0 0;"/>
                </HBox>
                <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS" prefHeight="200" minHeight="200"
                           style="-fx-background-color: transparent; -fx-border-color: #c7f9e9; -fx-border-width: 1; -fx-border-radius: 15;">
                    <columns>
                        <TableColumn text="Assignment ID" fx:id="assignmentIdCol" prefWidth="110"/>
                        <TableColumn text="Employee Name" fx:id="employeeNameCol" prefWidth="160"/>
                        <TableColumn text="Role" fx:id="roleCol" prefWidth="170"/>
                        <TableColumn text="Allocation %" fx:id="allocationCol" prefWidth="100"/>
                        <TableColumn text="Assignment Start" fx:id="assignmentStartCol" prefWidth="130"/>
                        <TableColumn text="Assignment End" fx:id="assignmentEndCol" prefWidth="130"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- PROJECT DETAILS + ACTIONS -->
