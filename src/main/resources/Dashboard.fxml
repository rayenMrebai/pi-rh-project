<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.DashboardController"
            prefWidth="1200" prefHeight="800" style="-fx-background-color: #f5f7fb;">
    <children>
        <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- HEADER -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <VBox>
                    <Label text="INTEGRA â€“ Manage HR Projects" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" />
                    <Label text="Administrator / RH / Manager Module" style="-fx-font-size: 11; -fx-text-fill: white; -fx-opacity: 0.9;" />
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Add Project" fx:id="addProjectButton"
                        style="-fx-background-color: #16a34a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            </HBox>

            <!-- PROJECTS TABLE -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e6e9f0;">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <Label text="HR Projects" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <Label text="Active and completed projects" style="-fx-text-fill: #6b7280; -fx-font-size: 11;"/>
                <TableView fx:id="projectsTable" VBox.vgrow="ALWAYS" prefHeight="200">
                    <columns>
                        <TableColumn text="Project ID" fx:id="projectIdCol" prefWidth="80"/>
                        <TableColumn text="Project Name" fx:id="projectNameCol" prefWidth="220"/>
                        <TableColumn text="Start Date" fx:id="projectStartCol" prefWidth="100"/>
                        <TableColumn text="End Date" fx:id="projectEndCol" prefWidth="100"/>
                        <TableColumn text="Status" fx:id="projectStatusCol" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- PROJECT ASSIGNMENTS -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e6e9f0;">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <Label text="Project Assignments" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <Label fx:id="selectedProjectLabel" text="Employees assigned to: (select a project)"
                       style="-fx-text-fill: #6b7280; -fx-font-size: 11;"/>
                <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS" prefHeight="200">
                    <columns>
                        <TableColumn text="Assignment ID" fx:id="assignmentIdCol" prefWidth="100"/>
                        <TableColumn text="Employee Name" fx:id="employeeNameCol" prefWidth="150"/>
                        <TableColumn text="Role" fx:id="roleCol" prefWidth="150"/>
                        <TableColumn text="Allocation %" fx:id="allocationCol" prefWidth="100"/>
                        <TableColumn text="Assignment Start" fx:id="assignmentStartCol" prefWidth="120"/>
                        <TableColumn text="Assignment End" fx:id="assignmentEndCol" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- PROJECT DETAILS -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #e6e9f0;">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                <Label text="Project Details" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                <GridPane hgap="10" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Project Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           style="-fx-wrap-text: true;"/>

                    <Label text="Start Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailStart" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="End Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailEnd" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Budget:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-text-fill: #6b7280;"/>
                    <Label fx:id="detailBudget" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- ACTION BUTTONS -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Assign Employee" fx:id="assignEmployeeButton"
                            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    <Button text="Update Assignment" fx:id="updateAssignmentButton"
                            style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    <Button text="Remove Assignment" fx:id="removeAssignmentButton"
                            style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                </HBox>
            </VBox>

            <!-- STATUS BAR -->
            <HBox style="-fx-background-color: #f3f6ff; -fx-padding: 10;" alignment="CENTER_LEFT">
                <Label fx:id="statusLabel" text="Connected - Database: INTEGRA_DB"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
